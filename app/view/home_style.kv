<MainHome>:
    FloatLayout: 
        id: float
        BoxLayout:
            orientation: 'vertical'  
            pos_hint: {'center_x': .5, 'center_y': .5}
            BoxLayout:
                padding: "5dp"
                orientation: 'vertical'
                canvas:
                    Rectangle:
                        source: "./app/view/img/effect_shadow.png"
                        pos: self.pos
                        size: self.size     
            
        #_____________Content_______________
                BoxLayout:
                    size_hint_y: None
                    height: '55dp'
                    padding: "15dp", "10dp"
                    spacing: "10dp"
                    canvas: 
                        Rectangle: 
                            source: "./app/view/img/input_shadow.png"
                            pos: self.pos
                            size: self.size
                    MenuOpen: 
                        icon: 'menu'
                        size_hint_x: None
                        halign: 'center'
                        font_size: '25sp'
                        width: "40dp"
                        theme_text_color: "Custom"
                        text_color: icons
                        on_release: root.abrir_menu(menu)
                    
                    Label:
                        text: "Pesquisar as suas..."
                        color: icons
                        text_size: self.size
                        valign: "middle"
                        helign: "left"
                    
                    MDIcon: 
                        icon: 'view-agenda-outline' #and view-grid
                        halign: 'center'
                        size_hint_x: None
                        width: "40dp"
                        font_size: '25sp'
                        theme_text_color: "Custom"
                        text_color: icons               
                Widget:
        #___________________________________

            BarraFerramentas:
        
        BoxLayout:   
            id: menu      
            orientation: 'vertical'
            pos_hint: {'left': 1, 'center_y':.5}
            size_hint_x: None
            width: 0
            opacity: 0
            canvas: 
                Color: 
                    rgba: white
                Rectangle: 
                    pos: self.pos
                    size: self.size
            
            BoxLayout: 
                size_hint_y: None
                height: "50dp"
                Label:
                    padding_x: "10dp"
                    text: "Poppu Keep"
                    color: icons
                    font_size: "20sp"
                    text_size: self.size
                    valign: "middle"
                    halign: "left"
                MDIconButton: 
                    icon: 'arrow-right'
                    halign: 'center'
                    size_hint_x: None
                    width: "40dp"
                    font_size: '25sp'
                    theme_text_color: "Custom"
                    text_color: icons  
                    on_release: root.fechar_menu(menu)
            BoxLayout:
                size_hint_y: None
                height: "40dp"
                spacing: "10dp"
                padding: "10dp", "5dp"
                canvas:
                    Color: 
                        rgba: wellow
                    Rectangle: 
                        pos: self.pos
                        size: self.size
                MDIcon: 
                    icon: 'lightbulb-outline'
                    halign: 'center'
                    size_hint_x: None
                    width: "40dp"
                    font_size: '25sp'
                    theme_text_color: "Custom"
                    text_color: icons  
                Label: 
                    text: "Notas"
                    text_size: self.size
                    valign: "middle"
                    halign: "left"
                    color: icons
            Widget:

<BarraFerramentas@BoxLayout>:
    id: nav
    orientation: 'vertical'
    size_hint_y: None
    height: "50dp"

    BoxLayout:
        size_hint_y: None
        height: '1dp'
        canvas: 
            Color:
                rgba: (0, 0, 0, .1)
            Rectangle:
                pos: self.pos
                size: self.size
    MDBoxLayout:
        spacing: '5dp'
        MDBoxLayout:
            orientation: "vertical"
            padding: '10dp', '5dp'
            size_hint_y: None
            height: nav.height
            MDIcon: 
                icon: 'check-box-outline'
                halign: 'center'
                font_size: '25sp'
                theme_text_color: "Custom"
                text_color: icons
        MDBoxLayout:
            orientation: "vertical"
            padding: '10dp', '5dp'
            size_hint_y: None
            height: nav.height
            MDIcon: 
                icon: 'brush'
                halign: 'center'
                font_size: '25sp'
                theme_text_color: "Custom"
                text_color: icons
        
        MDBoxLayout:
            orientation: "vertical"
            padding: '10dp', '5dp'
            size_hint_y: None
            height: nav.height
            MDIcon: 
                icon: 'microphone-outline'
                halign: 'center'
                font_size: '25sp'
                theme_text_color: "Custom"
                text_color: icons
        MDBoxLayout:
            orientation: "vertical"
            padding: '10dp', '5dp'
            size_hint_y: None
            height: nav.height
            MDIcon: 
                icon: 'image-outline'
                halign: 'center'
                font_size: '25sp'
                theme_text_color: "Custom"
                text_color: icons

